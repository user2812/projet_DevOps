pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "fatimag/image"
        DOCKER_TAG = "latest"
    }

    stages {
        stage('Cloner le dépôt') {
            steps {
                git 'https://github.com/user2812/projet_DevOps.git'
            }
        }

        stage('Installer les dépendances') {
            steps {
                bat """
                if exist venv rmdir /s /q venv
                python -m venv venv
                call venv\\Scripts\\activate && python -m pip install --upgrade pip
                call venv\\Scripts\\activate && pip install -r requirements.txt
                """
            }
        }

        stage('Tester l\'application') {
            steps {
                bat """
                call venv\\Scripts\\activate
                python manage.py test
                """
            }
        }

        stage('Construire l\'image Docker') {
            steps {
                bat "docker build -t %DOCKER_IMAGE%:%DOCKER_TAG% ."
            }
        }

        stage('Exécuter le conteneur') {
            steps {
                bat """
                docker stop django-container || exit 0
                docker rm django-container || exit 0
                docker run -d --name django-container -p 8000:8000 %DOCKER_IMAGE%:%DOCKER_TAG%
                """
            }
        }

        stage('Notifier par email') {
            steps {
                emailext subject: "Déploiement Jenkins terminé",
                        body: "Le déploiement de l'application Django est terminé avec succès.",
                        to: 'gassama761@gmail.com'
            }
        }
    }
}