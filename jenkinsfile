pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "fatimag-docker/django-app"
        DOCKER_TAG = "${env.GIT_COMMIT}"
    }

    stages {
        stage('Cloner le dépôt') {
            steps {
                git branch: "main", url: 'https://github.com/user2812/projet_DevOps.git'
            }
        }

        stage('Construire l\'image Docker') {
            steps {
                sh "docker build -t $DOCKER_IMAGE:$DOCKER_TAG ."
            }
        }

        stage('Tester dans le conteneur') {
            steps {
                sh "docker run --rm $DOCKER_IMAGE:$DOCKER_TAG python manage.py test"
            }
        }

        stage('Déployer en production') {
            steps {
                sh """
                docker stop django-container || true
                docker rm django-container || true
                docker run -d --name django-container -p 8000:8000 $DOCKER_IMAGE:$DOCKER_TAG
                """
            }
        }
    }

    post {
        always {
            emailext(
                subject: "Déploiement Jenkins - ${currentBuild.result ?: 'SUCCESS'}",
                body: "Statut : ${currentBuild.result ?: 'SUCCESS'}\nDétails : ${env.BUILD_URL}",
                to: 'gassama761@gmail.com'
            )
        }
    }
}